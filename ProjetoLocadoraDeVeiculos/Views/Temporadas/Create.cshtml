@model ProjetoLocadoraDeVeiculos.Models.Temporada

@{
    ViewData["Title"] = "Cadastro";
}

<h1>Cadastro</h1>

<h4>Temporada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentualAcrescerDiaria" class="control-label"></label>
                <input asp-for="PercentualAcrescerDiaria" class="form-control" />
                <span asp-validation-for="PercentualAcrescerDiaria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentualAcrescerMultaFixa" class="control-label"></label>
                <input asp-for="PercentualAcrescerMultaFixa" class="form-control" />
                <span asp-validation-for="PercentualAcrescerMultaFixa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PercentualAcrescerMultaDiaria" class="control-label"></label>
                <input asp-for="PercentualAcrescerMultaDiaria" class="form-control" />
                <span asp-validation-for="PercentualAcrescerMultaDiaria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
