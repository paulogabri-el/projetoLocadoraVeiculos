@model ProjetoLocadoraDeVeiculos.Models.Locacao

@{
    ViewData["Title"] = "Exclusão";
}

<h1>Exclusão Locação</h1>

<h3>Deseja realmente excluir?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Veiculo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Veiculo.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatusLocacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusLocacao.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Temporada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Temporada.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataLocacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataLocacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntregaOriginal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntregaOriginal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntrega)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataEntrega)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QtdDiasAlugados)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QtdDiasAlugados)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QtdRenovacoes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QtdRenovacoes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorDiaria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorDiaria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorMultaDiaria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorMultaDiaria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorMultaFixa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorMultaFixa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAlteracao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAlteracao)
        </dd>
    </dl>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (Model.StatusLocacao.Id == 4)
        {
            <input type="submit" value="Excluir" class="btn btn-danger" />
        }
        |
        <a asp-action="Index">Voltar</a>
    </form>
    <br />
    @if (Model.StatusLocacao.Id != 4)
    {
        <h5 class="flex-nowrap">Somente locações com status 'Cancelada' podem ser excluídas!</h5>
    }
</div>
