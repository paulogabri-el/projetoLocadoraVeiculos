@model ProjetoLocadoraDeVeiculos.Models.Veiculo

@{
    ViewData["Title"] = "Exclusão";
}

<h1>Exclusão Veículo</h1>

<h3>Deseja realmente excluir?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaVeiculo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoriaVeiculo.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Placa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Placa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatusVeiculo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusVeiculo.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorDiaria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorDiaria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorMultaFixa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorMultaFixa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorMultaDiaria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorMultaDiaria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAlteracao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAlteracao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (Model.StatusVeiculo.Id != 2)
        {
            <input type="submit" value="Excluir" class="btn btn-danger" />
        }
        |
        <a asp-action="Index">Voltar</a>
    </form>
    <br />
    @if (Model.StatusVeiculo.Id == 2)
    {
        <h5 class="flex-nowrap">Veículos com status 'Alugado' não podem ser excluídos!</h5>
    }
</div>
