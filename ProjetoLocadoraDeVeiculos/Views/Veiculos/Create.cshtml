@model ProjetoLocadoraDeVeiculos.Models.ViewModels.VeiculoViewModel

@{
    ViewData["Title"] = "Cadastro";
}

<h1>Cadastro</h1>

<h4>Veículo</h4>

@if (TempData["MensagemVeiculoExistente"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm btn-close" data-bs-dismiss="alert" arial-label="Close"></button>
        @TempData["MensagemVeiculoExistente"]
    </div>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaVeiculoId" class="control-label"></label>
                <select asp-for="CategoriaVeiculoId" class ="form-control" asp-items="ViewBag.CategoriaVeiculoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusVeiculoId" class="control-label"></label>
                <select asp-for="StatusVeiculoId" class ="form-control" asp-items="ViewBag.StatusVeiculoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ValorDiaria" class="control-label"></label>
                <input asp-for="ValorDiaria" class="form-control" />
                <span asp-validation-for="ValorDiaria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorMultaFixa" class="control-label"></label>
                <input asp-for="ValorMultaFixa" class="form-control" />
                <span asp-validation-for="ValorMultaFixa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorMultaDiaria" class="control-label"></label>
                <input asp-for="ValorMultaDiaria" class="form-control" />
                <span asp-validation-for="ValorMultaDiaria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
